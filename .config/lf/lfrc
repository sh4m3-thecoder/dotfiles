# Basic config
set hidden true
set ignorecase true
set icons true
set drawbox true

# Set file and image preview
set previewer ~/.config/lf/lf_kitty_preview
set cleaner ~/.config/lf/lf_kitty_clean

# Several integrations
cmd trash %trash-put $fx

cmd on_select &{{
	lf -remote "send $id set statfmt \"$(exa -ld --color=always "$f")\""
}}


